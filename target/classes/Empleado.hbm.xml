<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="es.itrafa.ad.ud4.t1.Empleado" table="EMP">
		<id name="empno" type="int" column = "EMPNO"/>
		<property name="ename" type="string" column="ENAME" length="10" />
		<property name="job" type="string" column="JOB" length="9" />
		<property name="mgr" type="int" column="MGR" length="10" />
		<property name="hiredate" type="org.hibernate.type.LocalDateType" column="HIREDATE"  />
		<property name="sal" type="double" column="SAL" length="10" />
		<property name="comm" type="double" column="COMM" length="10" />
		<property name="deptno" type="int" column="DEPTNO" length="2" />
	</class>
</hibernate-mapping>